{
    "name": "los/api-client",
    "description": "REST API Client using Hal",
    "require": {
        "php": "^7.1",
        "ext-json": "*",
        "ext-mbstring": "*",
        "guzzlehttp/guzzle": "^6.3",
        "guzzlehttp/psr7": "^1.5",
        "psr/container": "^1.0",
        "psr/link": "^1.0",
        "psr/simple-cache": "^1.0",
        "ramsey/uuid": "^3.7 | ^4.1",
        "laminas/laminas-eventmanager": "^3.2"
    },
    "require-dev": {
        "doctrine/coding-standard": "^6.0",
        "phpstan/phpstan": "^0.11",
        "squizlabs/php_codesniffer": "^3.4",
        "laminas/laminas-paginator": "^2.8"
    },
    "license": "MIT",
    "keywords": [
        "api",
        "rest",
        "client",
        "hal"
    ],
    "autoload": {
        "psr-4": {
            "Los\\ApiClient\\": "src/"
        },
        "classmap": [
            "./"
        ]
    },
    "suggest": {
        "los/loslog": "los/loslog for logging"
    },
    "type": "library",
    "config": {
        "sort-packages": true,
        "process-timeout": 5000
    },
    "homepage": "https://github.com/Lansoweb/api-client",
    "authors": [
        {
            "name": "Leandro Silva",
            "email": "leandro@leandrosilva.info"
        }
    ],
    "extra": {
        "zf": {
            "config-provider": "Los\\ApiClient\\ConfigProvider"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@phpstan"
        ],
        "cs-check": "phpcs -s",
        "cs-fix": "phpcbf",
        "phpstan": "phpstan analyse -l 4 -c phpstan.neon src"
    }
}
